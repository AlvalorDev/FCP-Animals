    <!--___ Radroach ___-->

    <!-- ThingDef -->

    <ThingDef ParentName="AnimalThingBase">
        <defName>FCP_Animal_Radroach</defName>
        <label>radroach</label>
        <description>A mutated cockroach, grown to enormous size by radiation exposure. Radroaches are highly adaptive pests that can survive in nearly any environment. While individually weak, they reproduce rapidly and can swarm unwary victims. Their meat is edible, though not particularly appetizing.</description>
        <statBases>
            <MoveSpeed>4.2</MoveSpeed>
            <MarketValue>35</MarketValue>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <ComfyTemperatureMax>60</ComfyTemperatureMax>
            <ArmorRating_Blunt>0.08</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
            <ToxicResistance>0.8</ToxicResistance>
            <LeatherAmount>0</LeatherAmount>
            <Wildness>0.25</Wildness>
        </statBases>
        <uiIconScale>1.5</uiIconScale>
        <tools>
            <li>
                <label>mandibles</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>3</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>2</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.1</chanceFactor>
            </li>
        </tools>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggUnfertilizedDef>FCP_Egg_Radroach_Unfertilized</eggUnfertilizedDef>
                <eggFertilizedDef>FCP_Egg_Radroach_Fertilized</eggFertilizedDef>
                <eggFertilizationCountMax>4</eggFertilizationCountMax>
                <eggLayIntervalDays>5</eggLayIntervalDays>
                <eggCountRange>3~6</eggCountRange>
            </li>
        </comps>
        <race>
            <thinkTreeMain>Animal</thinkTreeMain>
            <body>BeetleLike</body>
            <baseBodySize>0.08</baseBodySize>
            <baseHungerRate>0.08</baseHungerRate>
            <baseHealthScale>0.3</baseHealthScale>
            <fleshType>Insectoid</fleshType>
            <bloodDef>Filth_BloodInsect</bloodDef>
            <meatColor>(160,168,139)</meatColor>
            <meatMarketValue>0.4</meatMarketValue>
            <meatLabel>radroach meat</meatLabel>
            <useMeatFrom>Megaspider</useMeatFrom>
            <foodType>OmnivoreAnimal</foodType>
            <lifeExpectancy>3</lifeExpectancy>
            <manhunterOnDamageChance>0.10</manhunterOnDamageChance>
            <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
            <trainability>None</trainability>
            <canBeVacuumBurnt>false</canBeVacuumBurnt>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.05</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.15</minAge>
                    <soundWounded>Pawn_BigInsect_Pain</soundWounded>
                    <soundDeath>Pawn_BigInsect_Death</soundDeath>
                    <soundCall>Pawn_BigInsect_Call</soundCall>
                    <soundAngry>Pawn_BigInsect_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>FCP_Animal_Common</li>
        </tradeTags>
    </ThingDef>

